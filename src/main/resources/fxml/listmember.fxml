<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.listmember.ListMemberController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="800.0">
            <children>
                <TableView fx:id="tableView" prefHeight="400.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="nameCol" prefWidth="125.0" text="Name" />
                        <TableColumn fx:id="idCol" prefWidth="125.0" text="Member ID" />
                        <TableColumn fx:id="phoneCol" prefWidth="125.0" text="Phone" />
                        <TableColumn fx:id="emailCol" prefWidth="125.0" text="Email" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleMemberRefresh" text="Refresh" />
                                <MenuItem mnemonicParsing="false" onAction="#handleMemberEdit" text="Edit" />
                                <MenuItem mnemonicParsing="false" onAction="#handleMemberDelete" text="Delete" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
                <ListView fx:id="booksIssuedListView" prefHeight="400.0" prefWidth="300.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
