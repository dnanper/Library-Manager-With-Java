<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="api.ApiController">
   <children>
      <!-- Input fields for ISBN -->
      <HBox spacing="10" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="20.0">
         <children>
            <JFXTextField fx:id="isbnField" promptText="Enter ISBN"/>
         </children>
      </HBox>

      <!-- Buttons to trigger adding by ISBN -->
      <HBox spacing="10" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="20.0">
         <children>
            <Button fx:id="addISBNButton" text="Add by ISBN" onAction="#onAddByISBN"/>
         </children>
      </HBox>

      <!-- Label for status messages -->
      <Label fx:id="statusLabel" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="20.0"/>
   </children>
</AnchorPane>
