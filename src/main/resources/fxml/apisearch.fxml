<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="api.ApiSearchController">
    <VBox spacing="10" alignment="TOP_CENTER" prefWidth="400" prefHeight="400" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0">

        <!-- TextField for name search -->
        <TextField fx:id="nameField" promptText="Enter Book Name"
                   onKeyReleased="#onSearchByName" style="-fx-font-size: 14px;" />

        <!-- ListView to display search results -->
        <ListView fx:id="searchResultsList" prefHeight="200" prefWidth="360" />

        <!-- Button to add selected book to database -->
        <Button text="Add Selected Book" onAction="#onAddSelectedBook" />

    </VBox>
</AnchorPane>
